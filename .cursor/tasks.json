{
  "version": "0.0.1",
  "tasks": [
    {
      "name": "Start API (dev)",
      "command": "uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "icon": "play"
    },
    {
      "name": "Format (black)",
      "command": "black .",
      "icon": "wand"
    },
    {
      "name": "Lint (ruff)",
      "command": "ruff check .",
      "icon": "search"
    },
    {
      "name": "Type Check (mypy)",
      "command": "mypy app",
      "icon": "shield"
    },
    {
      "name": "Tests (pytest)",
      "command": "pytest -q",
      "icon": "beaker"
    },
    {
      "name": "All Checks (fmt+lint+types+tests)",
      "command": "bash -lc 'black . && ruff check . && mypy app && pytest -q'",
      "icon": "rocket"
    }
  ]
}
