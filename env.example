OAA_ED25519_PUBLIC_B64=REPLACE_ME_WITH_YOUR_PUBLIC_KEY

# ===== OAA Signing Configuration =====
OAA_SIGNING_VERSION=oaa:ed25519:v1
OAA_SIGNING_CREATED=2025-10-12T00:00:00Z
