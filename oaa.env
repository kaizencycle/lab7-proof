# OAA Configuration
# Rename this file to .env and fill in your values

# Admin token for protected endpoints
ADMIN_TOKEN=your-secure-admin-token-here

# Ed25519 signing keys (generate with: python -c "from nacl import signing; import base64; sk = signing.SigningKey.generate(); print('OAA_ED25519_PRIVATE_B64=' + base64.b64encode(sk.encode()).decode()); print('OAA_ED25519_PUBLIC_B64=' + base64.b64encode(sk.verify_key.encode()).decode())")
OAA_ED25519_PRIVATE_B64=REPLACE_ME_WITH_YOUR_PRIVATE_KEY
OAA_ED25519_PUBLIC_B64=REPLACE_ME_WITH_YOUR_PUBLIC_KEY

# Signing configuration
OAA_SIGNING_VERSION=oaa:ed25519:v1
OAA_SIGNING_CREATED=2025-10-12T00:00:00Z
OAA_ISSUER=oaa.lab7

# Optional: Legacy keys for key rotation
# OAA_ED25519_PUBLIC_B64_LEGACY=b64pub1|oaa:ed25519:v0, b64pub2|oaa:ed25519:v0.9

# Civic Ledger integration (optional)
LEDGER_URL=https://civic-protocol-core-ledger.onrender.com

# Redis for nonce replay defense (optional)
OAA_NONCE_REDIS_URL=redis://default:password@localhost:6379/0
OAA_NONCE_TTL_SEC=600

# Verification settings
OAA_VERIFY_TS_WINDOW_MIN=10
OAA_VERIFY_REQUIRE_NONCE=false
