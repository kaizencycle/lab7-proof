{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Change Tests Schema",
  "description": "Schema for civic-grade test specifications",
  "required": [
    "chamber",
    "cycle",
    "test_suite",
    "tests",
    "integrity_anchor",
    "parent_chamber"
  ],
  "properties": {
    "chamber": {
      "type": "string",
      "pattern": "^[A-Za-z0-9\\-_]+$"
    },
    "cycle": {
      "type": "string",
      "pattern": "^C-\\d+$"
    },
    "test_suite": {
      "type": "string",
      "minLength": 1
    },
    "tests": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "type", "input", "expected_output"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["unit", "integration", "e2e", "security", "performance", "load"]
          },
          "input": {
            "type": "object"
          },
          "expected_output": {
            "type": "object"
          }
        }
      }
    },
    "integrity_anchor": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$"
    },
    "parent_chamber": {
      "type": "string",
      "minLength": 1
    }
  }
}